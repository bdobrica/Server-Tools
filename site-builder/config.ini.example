# Example config.ini file generated by site-builder
# This file demonstrates the structure of the configuration file
# that gets automatically created and maintained by the site-builder tool
#
# Configuration persistence is handled by site_builder.core.config_persistence module

[ssl_certificate_authority]
root_ca_path = /etc/site-builder/ssl
# root_ca_password = (saved only if explicitly provided)

[paths]
site_builder_config_path = /etc/site-builder/
web_path = /mnt/www/
nginx_config_path = /etc/nginx/sites-available
nginx_enabled_path = /etc/nginx/sites-enabled
docker_compose_path = /etc/site-builder/docker/docker-compose.yml
template_path = /path/to/site_builder/templates

[network]
ip_prefix = 192.168.100
ip_start = 2

[ssl_renewal]
renew_keys = False
renew_csrs = False
renew_crts = False
auto_renew_days = 30

[ssl_details]
country = RO
state = Bucharest
organisation = Perseus Reverse Proxy

[nginx]
nginx_mode = native

[database]
mysql_mode = native
mysql_config_path = /etc/mysql
# mysql_root_password = (saved only if explicitly provided)
postgres_mode = native
# postgres_config_path = (saved only if explicitly provided)
# postgres_root_password = (saved only if explicitly provided)
# database_root_password = (saved only if explicitly provided)

[service_management]
skip_service_restart = False

[output]
verbose = False
